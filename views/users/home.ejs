<!-- Features Section -->
<section class="features-section py-5 text-center">
  <div class="container">
    <div class="row g-3"> <!-- reduced gap for tighter look -->
      <div class="col-md-4">
        <div class="feature-box border-primary-subtle p-4 rounded-4 shadow-sm h-100 border-top border-3 border-primary bg-white">
          <i class="bi bi-star-fill text-warning fs-1 mb-3"></i>
          <h5 class="fw-semibold mb-2 text-primary">Rate Professors</h5>
          <p class="text-muted small mb-0">
            Share your experiences and help others make informed choices.
          </p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-box border-info-subtle p-4 rounded-4 shadow-sm h-100 border-top border-3 border-info bg-white">
          <i class="bi bi-people-fill text-info fs-1 mb-3"></i>
          <h5 class="fw-semibold mb-2 text-info">Connect & Compare</h5>
          <p class="text-muted small mb-0">
            See how professors are rated by students across departments.
          </p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-box border-success-subtle p-4 rounded-4 shadow-sm h-100 border-top border-3 border-success bg-white">
          <i class="bi bi-mortarboard text-success fs-1 mb-3"></i>
          <h5 class="fw-semibold mb-2 text-success">Discover Excellence</h5>
          <p class="text-muted small mb-0">
            Find top-rated professors and courses tailored to your goals.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>


<!-- Custom Styling -->
<style>
/* Hero Section */
.hero-section {
  height: 80vh;
  background: linear-gradient(135deg, #eaf4ff, #f9fbfd);
  background-image: url('/images/bg-pattern.png'); /* optional pattern */
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

.text-gradient {
  background: linear-gradient(90deg, #007bff, #00b4d8);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.feature-box {
  border-radius: 1rem;
  transition: all 0.3s ease;
  background: #fff;
  cursor: pointer;
}
.feature-box:hover {
  transform: translateY(-6px);
  box-shadow: 0 10px 30px rgba(0, 123, 255, 0.15);
  border-color: rgba(0, 123, 255, 0.3);
}

/* CTA Section */
.cta-section {
  background: linear-gradient(90deg, #007bff, #00b4d8);
  border-radius: 1rem 1rem 0 0; /* rounded top corners for a modern look */
}

/* Buttons */
.btn-primary {
  transition: all 0.3s ease;
}
.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 123, 255, 0.2);
}
.btn-light {
  transition: all 0.3s ease;
}
.btn-light:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 123, 255, 0.2);
}
/* Card container around image */
.hero-image-card {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  padding: 22px 26px;
  border-radius: 22px; /* rounded corners */
  box-shadow: 0 14px 36px rgba(0, 0, 0, 0.08);
  transition: transform 0.35s ease, box-shadow 0.35s ease;
}

/* hover effect for the card */
.hero-image-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.12);
}

/* Image styling */
.hero-img {
  max-width: 480px;
  width: 100%;
  border-radius: 12px; /* soften sharp edges of image */
  animation: float 4s ease-in-out infinite;
}

/* smooth floating animation */
@keyframes float {
  0% { transform: translateY(0); }
  50% { transform: translateY(-12px); }
  100% { transform: translateY(0); }
}


</style>
